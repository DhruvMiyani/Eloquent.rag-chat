# Production Environment Configuration
# Store these in AWS Secrets Manager or Parameter Store

# OpenAI Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Pinecone Configuration
PINECONE_API_KEY=${PINECONE_API_KEY}
PINECONE_INDEX=ai-powered-chatbot-challenge
PINECONE_ENDPOINT=${PINECONE_ENDPOINT}

# Database Configuration (RDS Aurora)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:5432/${DB_NAME}
USE_DYNAMODB=false

# AWS Configuration
AWS_REGION=us-east-1
DYNAMODB_TABLE_PREFIX=chatbot

# Security
SECRET_KEY=${SECRET_KEY}  # Generate with: openssl rand -hex 32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30
ANONYMOUS_TOKEN_EXPIRE_DAYS=90

# CORS
FRONTEND_URL=https://eloquent-ai.com

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
LOG_LEVEL=INFO

# Features Flags
ENABLE_ANONYMOUS_USERS=true
ENABLE_USER_REGISTRATION=true
ENABLE_RAG=true
MAX_CONVERSATION_LENGTH=100
MAX_MESSAGE_LENGTH=2000